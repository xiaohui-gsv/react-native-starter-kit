{
  "name": "ReactNativeStarterKit",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "ios": "yarn env:dev && react-native run-ios --simulator \"iPhone 8 Plus\"",
    "ios:staging": "yarn env:staging && && react-native run-ios --simulator \"iPhone 8 Plus\"",
    "ios:prod": "yarn env:prod && && react-native run-ios --simulator \"iPhone 8 Plus\"",
    "android": "yarn env:dev && react-native run-android",
    "android:staging": "yarn env:staging && react-native run-android",
    "android:prod": "yarn env:prod && react-native run-android",
    "android:build": "cd android/ && ./gradlew assembleRelease && cd ..",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "env:dev": "node src/env/set-environment.js development",
    "env:staging": "node src/env/set-environment.js staging",
    "env:prod": "node src/env/set-environment.js production"
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.12.1",
    "@react-native-community/cameraroll": "^4.0.4",
    "@react-native-community/masked-view": "^0.1.11",
    "@react-native-community/segmented-control": "^2.2.2",
    "@react-native-community/slider": "^3.0.3",
    "@react-native-community/toolbar-android": "^0.1.0-rc.2",
    "@react-native-picker/picker": "^1.15.0",
    "@react-navigation/bottom-tabs": "^5.11.8",
    "@react-navigation/native": "^5.9.3",
    "@react-navigation/stack": "^5.14.3",
    "@rematch/core": "^2.0.1",
    "@rematch/loading": "^2.0.1",
    "@rematch/persist": "^2.0.1",
    "axios": "^0.21.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "native-base": "^2.15.2",
    "prop-types": "^15.7.2",
    "react": "17.0.1",
    "react-hook-form": "^7.5.1",
    "react-native": "0.64.0",
    "react-native-gesture-handler": "^1.10.3",
    "react-native-pager-view": "^5.1.5",
    "react-native-reanimated": "^2.1.0",
    "react-native-safe-area-context": "^3.2.0",
    "react-native-screens": "^3.1.1",
    "react-native-splash-screen": "^3.2.0",
    "react-native-vector-icons": "^8.1.0",
    "react-redux": "^7.2.4",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@testing-library/react-native": "^7.2.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "7.14.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.64.0",
    "prettier": "2.2.0",
    "react-test-renderer": "17.0.1"
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native|react-clone-referenced-element?/.*|react-navigation|redux-persist|native-base(-shoutem-theme)|native-base|react-native-router-flux|@react-native-community/async-storage|moment|@codler))"
    ],
    "globals": {
      "__DEV__": true
    }
  }
}
